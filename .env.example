# OpenAI API
OPENAI_API_KEY=your_openai_key

# Minimax TTS API
MINIMAX_API_KEY=your_minimax_key
MINIMAX_TTS_MODEL=speech-2.6-turbo
MINIMAX_VOICE_ID=female-shaonv
MINIMAX_OUTPUT_FORMAT=hex

# TikTok API
TIKTOK_ACCESS_TOKEN=your_tiktok_access_token
TIKTOK_CLIENT_KEY=your_tiktok_client_key
TIKTOK_CLIENT_SECRET=your_tiktok_client_secret
TIKTOK_REDIRECT_URI=http://localhost:3000/api/tiktok/oauth

# Optional: Câu hỏi của user (nếu không có sẽ random)
TIKTOK_DAILY_QUESTION=Làm sao để tìm được sự bình an trong tâm hồn?

# Optional: Bảo vệ cron endpoint
CRON_SECRET=your_random_secret_string

# Optional: Video processing service
VIDEO_PROCESSING_SERVICE=local

# Optional: FFmpeg paths (nếu không có trong PATH)
FFMPEG_PATH=ffmpeg
FFPROBE_PATH=ffprobe
